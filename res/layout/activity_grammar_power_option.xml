<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Grammar_Power_MainActivity" 
    android:background="@drawable/background">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
    	    android:layout_weight="0.3"
    	    android:layout_gravity="center_vertical|center_horizontal">
    	    <ImageView
		            android:layout_width="match_parent"
		            android:id="@+id/grammar_image"
		            android:layout_height="match_parent"		            
		            android:src="@drawable/main_logo"    
		            android:layout_centerHorizontal="true"    				   				    
		            android:contentDescription="Title Image"
		            />
    	</RelativeLayout>
    	<RelativeLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="0.7"
			        android:layout_marginTop="15dp"  
    	    >
    	    <Button 				       
			        android:id="@+id/grammar_irregularVerbs"		       
			        android:layout_width="match_parent"
       				android:layout_height="wrap_content"    
			        android:text="@string/irregular_verbs_past"
			        android:textColor="@android:color/black"
			        android:gravity="left"
			        />
				   <Button 				       
			        android:id="@+id/grammar_irregularVerbsParticiple"
			        android:layout_below="@+id/grammar_irregularVerbs"			       
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:text="@string/irregular_verbs_participle"
			        android:textColor="@android:color/black"
			        android:gravity="left"
			        />
				    <Button 				       
				        android:id="@+id/grammar_irregularNounPlural"
				        android:layout_below="@+id/grammar_irregularVerbsParticiple"			       
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content" 
				        android:text="@string/noun_plural"
				        android:textColor="@android:color/black"
			        android:gravity="left"
			        />
				    <Button 				       
				        android:id="@+id/grammar_irregularPerpositionSelected"
				        android:layout_below="@+id/grammar_irregularNounPlural"			       
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"  
				        android:text="@string/preposition_selected"
				        android:textColor="@android:color/black"
			        android:gravity="left"
			        />
				      <Button 				       
				        android:id="@+id/grammar_irregularPhrasalVerbs"
				        android:layout_below="@+id/grammar_irregularPerpositionSelected"			       
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"  
				        android:text="@string/phrasal_verbs"
				        android:textColor="@android:color/black"
			        android:gravity="left"	        				        
			        />
    	</RelativeLayout>
    </LinearLayout>
    
    	
				
				  
</RelativeLayout>